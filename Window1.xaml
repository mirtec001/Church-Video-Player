<!-- Window1.xaml -->
<Window
    x:Class="CVPApp.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="800"
    Height="325"
    Title="Church Video Player"
    
    >

<StackPanel Orientation="Horizontal">
    <StackPanel>
        <ListBox
            x:Name="lb"
            Width="650"
            Height="250"
            Margin="10, 10, 10, 10">
        </ListBox>
    </StackPanel>

    <StackPanel>
        <Button
            x:Name="Open"
            Width="100"
            Height="25"
            Margin="5, 10, 10, 10"
            Click="OpenClick"> Open </Button>
        <Button
            x:Name="Play"
            Width="100"
            Height="25"
            Margin = "5, 10, 10, 10"
            Click="PlayClick"> Play </Button>
        <Button
            x:Name="Stop"
            Width="100"
            Height="25"
            Margin = "5, 10, 10, 10"
            Click="StopClick"> Stop </Button>
        <Button
            x:Name="Close"
            Width="100"
            Height="25"
            Margin = "5, 10, 10, 10"
            Click="CloseClick"> Close </Button>
    </StackPanel>
</StackPanel>
</Window>